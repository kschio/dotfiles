# shortcuts
alias reload="source ~/.config/fish/config.fish"
alias g="git"
alias rr="rm -rf"
alias nano="hx"
alias vim="hx"
alias lg="lazygit"
alias cat="bat"

alias t="tig"
alias tl="tig log"
alias tb="tig blame"
alias tg="tig grep"
alias ts="tig status"
alias tsh="tig stash"

# default options
alias json="json -c"
alias psgrep="psgrep -i"
alias rsync="rsync -vh"

# list declared aliases, functions, paths
alias aliases="alias"
alias functions="functions"
alias paths="echo \$PATH | tr ' ' '\n'"

# directory listing/traversal
alias ls="eza --icons --group-directories-first"
alias ll="eza -l -g -a --icons --git --group-directories-first"
alias tree="eza -T --icons --git"
set -e LS_COLORS
set -e LS_TIMESTYLEISO
set -e LS_GROUPDIRSFIRST
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# network
alias ip="curl -s ipinfo.io | jq -r '.ip'"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# miscellaneous
alias hosts="sudo $EDITOR /etc/hosts"
alias week="date +%V"
alias speedtest="wget -O /dev/null http://speed.transip.nl/100mb.bin"
alias quit="exit"

# alias macOS
# Sleep now
alias sleepnow="sudo shutdown -s +0"
