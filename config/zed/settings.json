{
  // Theme and Appearance
  "theme": {
    "mode": "system",
    "light": "Onyx Dark",
    "dark": "Onyx Dark"
  },
  "icon_theme": "Zed (Default)",
  "current_line_highlight": "all",
  "cursor_blink": false,
  "cursor_shape": "bar",
  "scrollbar": {
    "show": "never"
  },
  "gutter": {
    "runnables": false
  },

  // Fonts and Typography
  "ui_font_family": "TX-02",
  "ui_font_weight": 500,
  "ui_font_size": 15,
  "buffer_font_family": "TX-02",
  "buffer_font_weight": 400,
  "buffer_font_size": null,
  "buffer_line_height": "comfortable",

  // Editor Behavior
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "base_keymap": "SublimeText",
  "soft_wrap": "editor_width",
  "relative_line_numbers": "enabled",
  "vertical_scroll_margin": 0,
  "hover_popover_enabled": true,
  "show_edit_predictions": true,

  // Indentation and Guides
  "indent_guides": {
    "enabled": false
  },

  // AI Assistant
  "agent": {
    "default_view": "thread",
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "dock": "left",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },

  // Terminal
  "terminal": {
    "dock": "bottom",
    "font_family": "GeistMono Nerd Font",
    "font_size": 14
  },

  // Panel Configuration
  "project_panel": {
    "dock": "right",
    "folder_icons": true,
    "file_icons": true,
    "indent_size": 16,
    "indent_guides": {
      "show": "never"
    },
    "auto_fold_dirs": false,
    "git_status": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "dock": "right",
    "scrollbar": {
      "show": "never"
    }
  },
  "collaboration_panel": {
    "button": false
  },

  // UI Elements
  "file_finder": {
    "modal_max_width": "medium",
    "file_icons": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "tabs": {
    "file_icons": false,
    "git_status": false
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "show_call_status_icon": false,

  // Code Formatting and Linting
  "formatter": {
    "external": {
      "command": "npx",
      "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
    }
  },
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": false,
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "emmetCompletions": true
        }
      }
    }
  },
  "languages": {
    "Markdown": {
      "format_on_save": "on"
    }
  },
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },

  // File Management
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.next",
    "**/.vercel",
    "**/.map",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules"
  ],

  // Privacy and Features
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
