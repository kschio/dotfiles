#################################
# SPACE_NUMBER 1: social
# SPACE_NUMBER 2: browser
# SPACE_NUMBER 3: coding
# SPACE_NUMBER 4: design
# SPACE_NUMBER 5: misc
#################################

# Move to space
ctrl + alt - n : yabai -m window --space next; yabai -m space --focus next
ctrl + alt - p : yabai -m window --space prev; yabai -m space --focus prev

cmd + ctrl + alt - 1 : yabai -m window --space social; yabai -m space --focus social;
cmd + ctrl + alt - 2 : yabai -m window --space browser; yabai -m space --focus browser;
cmd + ctrl + alt - 3 : yabai -m window --space coding; yabai -m space --focus coding;
cmd + ctrl + alt - 4 : yabai -m window --space design; yabai -m space --focus design;

# Focus space
ctrl + alt - 1 : yabai -m space --focus social
ctrl + alt - 2 : yabai -m space --focus browser
ctrl + alt - 3 : yabai -m space --focus coding
ctrl + alt - 4 : yabai -m space --focus design
ctrl + alt - 5 : yabai -m space --focus misc

# Focus window
ctrl + alt - h : yabai -m window --focus west  || yabai -m display --focus west
ctrl + alt - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + alt - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + alt - l : yabai -m window --focus east  || yabai -m display --focus east

# Resize windows
ctrl + alt - left  : yabai -m window --resize left:-50:0; \
                     yabai -m window --resize right:-50:0
ctrl + alt - down  : yabai -m window --resize bottom:0:50; \
                     yabai -m window --resize top:0:50
ctrl + alt - up    : yabai -m window --resize top:0:-50; \
                     yabai -m window --resize bottom:0:-50
ctrl + alt - right : yabai -m window --resize right:50:0; \
                     yabai -m window --resize left:50:0

# Equalize size of windows
lctrl + alt - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
lctrl + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Rotate
ctrl + alt - r : yabai -m space --rotate 90
ctrl + alt - x : yabai -m space --mirror x-axis
ctrl + alt - y : yabai -m space --mirror y-axis

# Float / Unfloat window
ctrl + alt - o : yabai -m window --toggle float
ctrl + alt + cmd - space : yabai -m window --toggle float && yabai -m window --grid 1:3:0:0:2:1

# Make window native fullscreen
ctrl + alt - f  : yabai -m window --toggle native-fullscreen

# Restart Yabai
shift + lctrl + alt - r : \
      brew services restart yabai; \
      brew services restart skhd
